{% extends "base.html.twig" %}

{% block body %}
	<div class="bg-black d-flex flex-column justify-content-between my-5 py-5">
		{% if error %}
			<div class="alert alert-danger">{{error.messageKey}}</div>
		{% endif %}
		<form method="post" class="container text-light my-3">
			<label for="username">Username</label>
			<input type="text" id="username" name="_username" value="{{last_username}}" class="form-control mb-3" required/>
			<label for="password">Password</label>
			<input type="password" id="password" name="_password" class="form-control mb-3" required/>
			<input type="hidden" name"_target_path" value="/">
			<button type="submit" class="btn btn-outline-light mt-3 mb-5">Connection</button>
		</form>
	</div>
{% endblock %}
