{% extends "base.html.twig" %}

{% block About %}
	<a class="active px-3 nav-link" aria-current="page" href="aboutme" style="color: #BC3CD8;">About</a>
{% endblock %}

{% block body %}
	<div class="d-flex flex-column justify-content-between ">
		<div class="container d-flex align-items-center mt-5">
			<div class="row mt-sm-5">
				<div class="col-sm-3 col-xl-5 d-flex align-self-center">
					<span>
						<h5 class="fw-bold text-light lead">A BIT ABOUT ME
							<br></h5>
						<p class="text-secondary display-6 mt-4">I am a UI/UX designer who is passionate about creating
							<span class="text-light fw-bold">
								beautiful and joyful digital experiences. Beside design, I love music, games and travelling.
							</span>
						</p>
					</span>
				</div>
				<div class="col-sm-5 col-xl-4 d-flex align-self-center">
					<img class="img-fluid ms-lg-5" alt="image" src=".\images\Change this.png">
				</div>
				<div class="col-sm ">
					<img class="img-fluid pb-3 pt-5" alt="image" src=".\images\Cover.png">
					<img class="img-fluid" alt="image" src=".\images\Change this (1).png">
				</div>
			</div>
		</div>
	</div>
	<div class="container mt-5">
		<div class="row ">
			<p class="text-secondary display-6 mt-4">All the skills
				<span class="text-light fw-bold">
					I master :</span>
			</p>
		</div>
		<div class="row">
			{% for skill in skills %}
				<div class="card bg-dark d-flex me-4 mb-5" style="width: 18rem;">
					<div class="card-header text-light">
						<h5 class="fw-bold text-light lead">{{skill.name}}</h5>
					</div>
					<div class="card-body">
						<img alt="skill 1" class="img-fluid" src="{{asset('uploads/brochures/' ~ skill.brochurefilename)}}">
					</div>
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<div class="card-footer">
							<a href="/skilledit/{{skill.id}}" type="button" class="btn btn-warning mt-4 ms-sm-4">Edit</a>
							<a href="/skilldelete/{{skill.id}}" type="button" class="btn btn-danger mt-4 ms-sm-4">Delete</a>
						</div>
					{% endif %}

				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
